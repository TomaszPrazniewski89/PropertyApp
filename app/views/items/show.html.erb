<% if @items.images.size == 1 %>
<% binding.pry%>
    <img class="d-block w-100" src="<%= cl_image_path @ad.photos.first.key %>" alt="photo" >

<% elsif @items.images.size > 1 %>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <% @items.images.size.times do |i| %>
            <% binding.pry %>
                <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= "active" if i.zero? %>"></li>
            <% end %>
        </ol>

        <div class="carousel-inner">
            <% @items.images.each_with_index do |photo, index| %>
                <div class="carousel-item <%= "active" unless index.zero? %>">
                  <% binding.pry %>

                    <img class="d-block w-50" src="<%= photo.url %>" alt="<%= index.ordinalize %> image">
                </div>
            <% end %>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
<% end %>
